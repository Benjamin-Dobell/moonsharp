{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"types": [
			"node",
			"vscode"
		],
		"lib": [
			"es2015"
		],

		"outDir": "./out",
		"sourceMap": true,

		"noImplicitAny": false,
		"removeComments": false,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"noFallthroughCasesInSwitch": false,
		"noImplicitReturns": true,

		"preserveConstEnums": true,
		"strictNullChecks": true,
		"noUnusedParameters": false
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"src/tests"
	]
}
